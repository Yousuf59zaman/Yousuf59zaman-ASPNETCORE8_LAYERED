@model EditOrderViewModel

@using ECommerceApp.Shared

@{
    ViewData["Title"] = "Edit Order";
}

<h2>Edit Order</h2>

<form asp-action="UpdateOrder" method="post">
    <div class="form-group">
        <label for="OrderStatus">Order Status:</label>
        <input type="text" class="form-control" id="OrderStatus" name="OrderStatus" value="@Model.OrderStatus" required />
    </div>

    <div class="form-group">
        <label for="PaymentStatus">Payment Status:</label>
        <select class="form-control" id="PaymentStatus" name="PaymentStatus">
            <option value="Pending" selected="@(Model.PaymentStatus == PaymentStatus.Pending ? "selected" : null)">Pending</option>
            <option value="Successful" selected="@(Model.PaymentStatus == PaymentStatus.Successful ? "selected" : null)">Successful</option>
        </select>
    </div>

    <input type="hidden" asp-for="OrderID" />

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="OrderHistory" class="btn btn-secondary">Cancel</a>
</form>
